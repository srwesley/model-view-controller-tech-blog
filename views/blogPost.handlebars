<div class="text-center">
    {{!-- Main blog content --}}
    <h2>{{title}}</h2>
    <p>{{contents}}</p>
    <p>Created by {{user.name}} on {{format_date date_created}}</p>
    <br>
    <br>

    <input type="hidden" name="post-id" id= "post-id" value="{{id}}">
    {{!-- Comments Section --}}
    <h3><u>Comments</u></h3>

    <form class="form new-project-form" id="comment-form">
        <div class="form-group">
            <input class="form-input" type="text" id="new-comment" name="new-comment" />
        </div>
      
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Add Comment</button>
        </div>
    </form>
 
    <br>

    {{#each comments as |comment| }}
    {{comment.text}} - {{comment.user_id}}<br>
    {{/each}} 

</div>

<script src="/js/dashboard.js"></script>